void first(){
  while(1){
    if(millis()-s_timer>3) 
      reading();
  float error = desiredDistance - ld ;
  integral += error;  // Accumulate error for the integral term
  float correction = Kp * error + Ki * integral + Kd * (error - previousError);
  Serial.print(correction);
  Serial.print("  ");
   // Map correction to servo angle (-90 to 90 degrees for steering)
   int steeringAngle = map(correction, 60, -60, 50, 50);  // Adjust range for responsiveness
   steeringAngle = constrain(steeringAngle, 50, 150);      // Keep within servo bounds

   steering.write(steeringAngle);
   //Update previous error for the next loop
    float baseSpeed = map(abs(correction), 0, 50, 180, 120);
    baseSpeed = constrain(baseSpeed, 120, 180);
     Serial.println(steeringAngle);
    run(baseSpeed);
//   run(120);
  previousError = error;
  }
}
